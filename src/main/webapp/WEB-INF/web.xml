    <!--============================================================
        Context listener
    =============================================================-->
    <listener>
        <listener-class>ua.com.semkov.web.listener.ContextListener</listener-class>
    </listener>


    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/jsp/error/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error_page.jsp</location>
    </error-page>
</web-app>